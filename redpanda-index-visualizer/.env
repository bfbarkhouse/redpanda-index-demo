# Redpanda/Kafka Configuration
KAFKA_TOPIC=redpanda_index_candles
KAFKA_BROKERS=127.0.0.1:9092
KAFKA_GROUP_ID=redpanda-visualizer

# SSL/TLS Configuration
KAFKA_SSL=false
# KAFKA_SSL_REJECT_UNAUTHORIZED=true
# KAFKA_SSL_CA_PATH=/path/to/ca-cert.pem
# KAFKA_SSL_CERT_PATH=/path/to/client-cert.pem
# KAFKA_SSL_KEY_PATH=/path/to/client-key.pem

# SASL Authentication Configuration
# Supported mechanisms: plain, scram-sha-256, scram-sha-512
# KAFKA_SASL_MECHANISM=scram-sha-256
# KAFKA_SASL_USERNAME=<username>
# KAFKA_SASL_PASSWORD=<password>

# Schema Registry Configuration (optional)
# SCHEMA_REGISTRY_URL=<Redpanda Schema Registry URL>
# SCHEMA_REGISTRY_USERNAME=<username>
# SCHEMA_REGISTRY_PASSWORD=<password>

# Server Configuration
PORT=3001
